<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.covid_tracker">

    <application
        android:allowBackup="true"
        android:icon="@drawable/covid_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CovidTracker">
        <activity android:name=".AboutActivity"></activity>
        <activity android:name=".CountryWiseDataActivity" />
        <activity android:name=".EachCountryDataActivity" />
        <activity android:name=".DistrictWiseDataActivity" />
        <activity android:name=".EachStateDataActivity" />
        <activity android:name=".StateWiseDataActivity" />
        <activity android:name=".WorldDataActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>